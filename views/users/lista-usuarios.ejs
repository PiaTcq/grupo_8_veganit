<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Usuarios</title>
    <link rel="stylesheet" href="/css/styles-lista-usuarios.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
<body>
  <header>
    <%- include("../partials/header")%>
  </header>
  <main>
    <h2 class="tituloPrincipal">Usuarios:</h2>
    <% cuentas.forEach(cuentas=>{ %>
    <br>
    <div class="container">
      <div class="row">
           
              <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                  <div class="user-caja">
                      <h4 class="nombre"><%= cuentas.nombre %></h4>
                      <h6 class="numeroId"><%= cuentas.id %></h6>
                      <p class="localidad"><%= cuentas.localidad %></p>
                     
                      <button class="btn btn-outline-danger"><a href="editar/<%= cuentas.id %>"> editar </a></button>
                      <form action="delete/<%= cuentas.id %>?_method=delete" method="post">
                      <button class="btn btn-outline-danger" type="submit"> Borrar </button>
                      <form action="/delete/<%= cuentas.id %>" method="post">
                        <input type="hidden" name="_method" value="delete">
                        
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <br>
  <%  }) %>
  </main>
  <footer>
    <%- include("../partials/footer") %>
  </footer>
</body>
